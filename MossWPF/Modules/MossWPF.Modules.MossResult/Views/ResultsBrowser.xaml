<UserControl x:Class="MossWPF.Modules.MossResult.Views.ResultsBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MossWPF.Modules.MossResult.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:rm="clr-namespace:MossWPF.Modules.MossResult"
             mc:Ignorable="d" 
            
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True" >
    <Grid MaxWidth="980" MaxHeight="700">
        <Border Background="{DynamicResource DarkBlueControlSurfaceBrush}" BorderBrush="{DynamicResource DarkBlueControlSurfaceBrush}" BorderThickness="4,4,4,4" CornerRadius="4,4,4,4" >
            <WebBrowser rm:WebBrowserUtility.BindableSource="{Binding ResultsSource}"/>
        </Border>
    </Grid>
</UserControl>
